
<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to  list.title, list %></td>
        <td><%= list.content %></td>
        <% if list.user != nil %>
          <td><%= link_to list.user.username, list.user %></td> 
        <% else %>
          <td>no user</td>
        <% end %>
        <% list.categories.each do |cat| %>
        <td><%= cat.name %></td>
        <% end %>
        <td><%= link_to 'Show', list %></td>
        <% if current_user == list.user %>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <% end %>
        <% if current_user == list.user %>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :search do %>
  <div class="large-8 small-9 columns">
  <%= search_form_for @search do |f| %>
    <%= f.text_field :title_or_content_cont, class: "radius-left expand", placeholder: "List Title" %>
  </div>
    <div class="large-4 small-3 columns">
      <%= f.submit "Search", class: "radius-right button" %>
    </div>
  <% end %>
<% end %>
<br>



<%= link_to 'New List', new_list_path unless current_user.blank? %>
